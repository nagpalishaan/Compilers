	/* Identify circular definitions in functions */
	syn boolean IdUse.isCircular() = inExprOf(decl());
	inh boolean IdUse.inExprOf(IdDecl decl);

    // TODO

    eq Program.getChild().inExprOf(IdDecl decl) = false;
}